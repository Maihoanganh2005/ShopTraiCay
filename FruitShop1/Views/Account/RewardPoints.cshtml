@{
    ViewData["Title"] = "Điểm thưởng";
}

<h2 class="text-center mb-4">Điểm thưởng của bạn</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="card text-center shadow-sm">
    <div class="card-body">
        <h5 class="card-title">Số điểm hiện tại</h5>
        <p class="card-text display-4">
            @ViewBag.RewardPoints <i class="fas fa-star text-warning"></i>
        </p>
        <p class="text-muted">Bạn có thể sử dụng điểm thưởng để giảm giá khi thanh toán!</p>
        <a asp-controller="Order" asp-action="Checkout" class="btn btn-primary">Mua sắm ngay</a>
        <a asp-controller="Order" asp-action="MyOrders" class="btn btn-outline-secondary">Xem lịch sử mua hàng</a>
    </div>
</div>

<style>
    .card {
        max-width: 500px;
        margin: 0 auto;
    }

    .display-4 {
        font-size: 3rem;
        color: #28a745;
    }
</style>